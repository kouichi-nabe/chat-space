.left-content
  /user情報
  .left-header
    %h2.left-header__user-name
      = current_user.name
    %ul.left-header__list
      %li.left-header__list__item
        = link_to new_group_path do
          %i.fa.fa-edit
      %li.left-header__list__item
        = link_to edit_user_path(current_user) do
          %i.fa.fa-cog
  /group情報
  .group-list
    .group-list__item
      %h3.group-list__item__name group1
      %p.group-list__item__message こんにちわ

.main-content
  .main-header
    %h3.main-header__group-name group1
    %p.main-header__memder
      = "Member：#{current_user.name}"
    %a.main-header__edit-button Edit
  .message-list
    .message-list__item
      %h2.message-list__item__user-name
        = current_user.name
      %p.message-list__item__message-time 2019/03/19(Tue) 21:15:32
      .message-list__item__message こんにちわ
    %form.message-from
      .message-from__box
        %input.message-from__box__text{type: "text", placeholder: "type a message", name: "text"}
        %label.message-from__box__icon{for: "upload-icon"}
          %i.fa.fa-image
          %input.messag-from__box__icon__file{type: "file", id: "upload-icon", name: "image", style: "display:none;"}
      %input.message-from__send{type: "submit", value: "Send"}
